#include <stdio.h>

int main(void) {
    int t;
    scanf("%d",&t);
    while(t--){
        int x1,y1,x2,y2;
        scanf("%d",&x1);
        scanf("%d",&y1);
        scanf("%d",&x2);
        scanf("%d",&y2);
        if((x1+y1) <= (x2+y2)){
            printf("%d",x1+y1);
        }
        else{
            printf("%d",x2+y2);
        }
        printf("\n");
    }
	return 0;
}

